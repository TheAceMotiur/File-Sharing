# Enable rewrite engine
RewriteEngine On

# Base rewrite rules for pretty URLs - only redirect if directly accessing download.php
RewriteCond %{THE_REQUEST} \ /+download\.php\?id=([a-zA-Z0-9]+)
RewriteRule ^download\.php$ /download/%1? [L,R=301]

# Internal rewrites for download URLs 
RewriteRule ^download/([a-zA-Z0-9]+)$ download.php?id=$1 [L,QSA]
RewriteRule ^download/([a-zA-Z0-9]+)/download$ download.php?id=$1&download=1 [L,QSA]
RewriteRule ^download/([a-zA-Z0-9]+)/preview$ download.php?id=$1&preview=1 [L,QSA]

# Enable compression
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    AddOutputFilterByType DEFLATE text/html text/plain text/xml application/json
</IfModule>

# Remove .php extension - but skip download URLs
RewriteCond %{REQUEST_URI} !^/download/
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Cache static assets for 1 week
<FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js)$">
    Header set Cache-Control "max-age=604800, public"
</FilesMatch>

# Add CORS headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, OPTIONS"
Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, X-File-Name"

# Additional headers for proxy support
Header set X-Frame-Options "ALLOWALL"
Header set X-Content-Type-Options "nosniff"